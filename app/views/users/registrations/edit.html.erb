<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

  <h2>アカウント編集</h2>

  <%= f.input :name, label: "名前", placeholder: "20文字以内" %><br>

  <%= f.input :phone_number, label: "電話番号", placeholder: "-（ハイフン）なし、半角数字で入力してください" %><br>

  <%= f.input :email, label: "メールアドレス", autofocus: true, autocomplete: "email", placeholder: "連絡の取れるメールアドレスを入力してください" %><br>

  <%= f.button :submit, "Update", :class => "btn-primary" %><br>

  <%= link_to "Back", :back %>

<% end %>

